{
  "manifest_version": 2,
  "name": "Facebook Extension",
  "version": "1.0",
  "description": "Extension for updating Facebook page info",
  "permissions": [
      "tabs",
      "https://graph.facebook.com/*"
  ],
  "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon16.png",
          "32": "icon32.png",
          "48": "icon48.png",
          "128": "icon128.png"
      }
  },
  "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
  },
  "background": {
      "scripts": ["background.js"]
  },
  "web_accessible_resources": [
      "assets/*"
  ]
}
